---
title: OSM Kids!
description: An OpenStreetMap-powered map for kids
icon: https://osm.kids/favicon.png
options: 
  hash: m
type: vector
controls:
  - type: HTMLControl
    position: top-left
    options:
      html: |
        <div class="infobox">
        <h1>OSM Kids!</h1>
        <details>
          <summary>Legend</summary>
          🐟 Aquariums
          <br>
          📗 Book Shops
          <br>
          🌻 Botanic Gardens
          <br>
          🍬 Candy Shops
          <br>
          🚒 Fire Stations
          <br>
          ♟️ Game Shops
          <br>
          🍦 Ice Cream Shops
          <br>
          📙 Libraries
          <br>
          <small>📘</small> Little Libraries
          <br>
          🛝 Playgrounds
          <br>
          🏊 Pools
          <br>
          🎡 Theme Parks
          <br>
          🏫 Schools
          <br>
          🧸 Toy Shops
          <br>
          🚂 Train Stations
          <br>
          🏛️ Museums
          <br>
          🕹️ Video Game Shops
          <br>
          🐯 Zoos
        </details>
        </div>
      css: |
        .infobox {
          background: white;
          padding: 1em;
          margin: 1em;
          pointer-events: all;
        }
        details { 
          margin: 1em;
        }
  - type: GeolocateControl
    options:
      positionOptions:
        enableHighAccuracy: true
      trackUserLocation: true
style:
  projection:
    type: globe
  layers:
    - type: symbol
      source-layer: places
      symbol-sort-key: [get, sort]
      text-field: '{name}'
      text-halo-color: '#e8e5d8'
      text-halo-width: 2 
      text-justify: auto
      text-radial-offset: 1
      text-optional: true
      text-variable-anchor:
        - left
        - right
        - top-left
        - bottom-left
        - top-right
        - bottom-right
      icon-image:
        - match
        - [get, type]
        - country
        - - image
          - - concat
            - 'emoji:flag-'
            - - downcase
              - - coalesce
                - [ get, ISO3166-1:alpha2 ]
                - [ get, ISO3166-1 ]
                - [ get, country_code_iso3166_1_alpha_2 ]
        - city
        - emoji:cityscape
        - [ school, kindergarten ]
        - emoji:school
        - fire_station
        - emoji:fire_engine
        - ice_cream
        - emoji:icecream
        - library
        - emoji:orange_book
        - theme_park
        - emoji:ferris_wheel
        - public_bookcase
        - emoji:blue_book
        - playground
        - emoji:playground_slide
        - zoo
        - emoji:tiger
        - aquarium
        - emoji:fish
        - [ botanic_garden ]
        - emoji:sunflower
        - [ museum ]
        - emoji:classical_building
        - [ station ]
        - emoji:steam_locomotive
        - [ toys ]
        - emoji:teddy_bear
        - [ games ]
        - emoji:chess_pawn
        - [ video_games ]
        - emoji:joystick
        - [ books ]
        - emoji:green_book
        - [ confectionery ]
        - emoji:candy
        - [ swimming_pool ]
        - emoji:swimmer
        - emoji:question
      icon-size:
        - match
        - [ get, type ]
        - public_bookcase
        - .5
        - 1
  extends: https://styles.trailsta.sh/maptiler-basic.json
---
pmtiles://https://files.trailstash.net/osm-kids.pmtiles
