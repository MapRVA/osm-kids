---
title: OSM Kids!
controls:
  - type: HTMLControl
    position: top-left
    options:
      html: |
        <div class="infobox">
        <h1>OSM Kids!</h1>
        <details>
          <summary>Legend</summary>
          🐟 Aquariums
          <br>
          🚒 Fire Stations
          <br>
          🍦 Ice Cream Shops
          <br>
          📚 Libraries
          <br>
          🛝 Playgrounds
          <br>
          🏫 Schools
          <br>
          🏛️ Museums
          <br>
          🐯 Zoos
        </details>
        </div>
      css: |
        .infobox {
          background: white;
          padding: 1em;
          margin: 1em;
          pointer-events: all;
        }
        details { 
          margin: 1em;
        }
  - type: ReloadControl
  - type: GeolocateControl
    options:
      positionOptions:
        enableHighAccuracy: true
      trackUserLocation: true
style:
  layers:
    - type: symbol
      icon-image:
        - case
        - [ ==, [ get, amenity ], school ]
        - emoji:school
        - [ ==, [ get, amenity ], kindergarten ]
        - emoji:school
        - [ ==, [ get, amenity ], fire_station ]
        - emoji:fire_engine
        - [ ==, [ get, amenity ], ice_cream ]
        - emoji:icecream
        - [ ==, [ get, amenity ], library ]
        - emoji:books
        - [ ==, [ get, leisure ], playground ]
        - emoji:playground_slide
        - [ ==, [ get, tourism ], zoo ]
        - emoji:tiger
        - [ ==, [ get, tourism ], aquarium ]
        - emoji:fish
        - [ ==, [ get, tourism ], museum ]
        - emoji:classical_building
        - emoji:question
      symbol-sort-key:
        - case
        - [ ==, [ get, amenity ], school ]
        - 30
        - [ ==, [ get, amenity ], playground ]
        - 20
        - [ ==, [ get, amenity ], fire_station ]
        - 17
        - [ ==, [ get, tourism ], zoo ]
        - 10
        - [ ==, [ get, tourism ], aquarium ]
        - 15
        - 100
  extends: https://styles.trailsta.sh/maptiler-basic.json
---
[bbox:{{bbox}}];
(
nwr[amenity=school];
nwr[amenity=kindergarten];
nwr[leisure=playground];
nwr[amenity=ice_cream];
nwr[amenity=library];
nwr[amenity=fire_station];
nwr[tourism=zoo];
nwr[tourism=aquarium];
nwr[tourism=museum][museum=children];
);
out center;
